<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout" />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:visibility="invisible"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/toncity_false"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:tabGravity="center"
            app:tabTextAppearance="@style/MyTabText"
            app:tabMode="fixed"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dynamic_hear_image"
            android:layout_width="37dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:layout_height="37dp"
            android:background="@mipmap/person_head"
            />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8ccccccc"
        />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:background="#FAFBFD"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="none"
            />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/xiaoxi_linear"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="vertical"
            >
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/xiaoxi_linear_next"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/dynamic_xiaoxi_shape"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/xiaoxi_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="收到"
                    android:paddingLeft="5dp"
                    android:maxLength="2"
                    android:layout_gravity="center|right"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/xiaoxi_number"
                    android:layout_width="wrap_content"
                    android:gravity="center|right"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="0"
                    android:layout_gravity="center|right"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/push_leibie"
                    android:layout_width="wrap_content"
                    android:gravity="center|right"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="封祭祀信"
                    android:layout_gravity="center|right"
                    />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/xiaoxi_right"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/fadon_frame"
            android:layout_width="68dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|right"
            android:background="@mipmap/jishi_fabu"
            android:layout_height="68dp">

        </FrameLayout>
    </FrameLayout>
</android.support.v7.widget.LinearLayoutCompat>