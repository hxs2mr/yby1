<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayEEE"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/d10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="交费单位:"

                />

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="美的林城时代"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="住户姓名:"

                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="@dimen/d10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="姓名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="联系电话:"

                />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="@dimen/d10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="电话"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="短信验证码:"

                />

            <EditText
                android:id="@+id/et_validate"
                android:layout_width="@dimen/d10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="验证码" />

            <Button
                android:id="@+id/btn_getsmscode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d30"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:background="@drawable/shape_btn_getvalidatecode_normal"
                android:text="获取验证码"
                android:textColor="@color/colorWhite"

                />
        </LinearLayout>


    </LinearLayout>



    <Button
        android:id="@+id/btn_query_bill"
        style="@style/BaseFontSize18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d50"
        android:layout_marginRight="@dimen/d50"
        android:layout_marginTop="@dimen/d60"
        android:background="@drawable/shape_btn_login"

        android:text="查询账单"
        android:textColor="@color/colorWhite" />
</android.support.v7.widget.LinearLayoutCompat>
