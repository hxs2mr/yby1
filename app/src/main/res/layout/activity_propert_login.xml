<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout" android:visibility="gone" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/p_login"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/p_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_white"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_login"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/p_login_phone"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/pro_login_shape"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="请输入手机号"
            android:textSize="17sp"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="#ffffff"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:paddingLeft="5dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="#cccccc"
            />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/p_yzm_ed"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="47dp"
            android:background="@drawable/pro_login_shape"
            android:hint="请输入验证码"
            android:textSize="17sp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:textColorHint="#cccccc"
            android:textColor="#ffffff"
            android:textCursorDrawable="@drawable/cursor_color"
            />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_huoqu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="8dp"
                android:textSize="17sp"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:background="@drawable/pro_yan_shape"
                fontPath="fonts/SourceHanSansCN-Normal.ttf"
                android:maxLines="1"
                android:text="获取验证码"
                />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/p_login_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:layout_marginRight="25dp"
            android:background="@drawable/login_ok"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="立即登录"
            />
        </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/lienar_select_qu"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/p_select_qu"
                android:layout_height="270dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择小区"
                android:textColor="#272828"
                android:textSize="13sp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="17dp"
                fontPath="fonts/SourceHanSansCN-Light.ttf"
                android:paddingBottom="7dp"
                />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#8ce8e8e8"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/select_recycle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="17dp"
                    android:layout_marginBottom="7dp"
                    android:layout_height="wrap_content"/>

            </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>