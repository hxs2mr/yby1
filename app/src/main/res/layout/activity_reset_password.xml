<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.itislevel.lyl.mvp.ui.user.LoginActivity">

    <include layout="@layout/toolbar_layout"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/d32">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="新密码    ：" />

            <EditText
                android:id="@+id/et_password"
                style="@style/BaseFontSize18"
                android:layout_width="@dimen/d0"
                android:layout_height="@dimen/d45"
                android:layout_weight="1"
                android:hint="密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="确认密码：" />

            <EditText
                android:id="@+id/et_password_conf"
                style="@style/BaseFontSize18"
                android:layout_width="@dimen/d0"
                android:layout_height="@dimen/d45"

                android:layout_weight="1"
                android:hint="确认密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="手机号    ：" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/BaseFontSize18"
                android:layout_width="@dimen/d0"
                android:layout_height="@dimen/d45"
                android:layout_weight="1"

                android:hint="手机号"
                android:inputType="phone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="验证码    ：" />

            <EditText
                android:id="@+id/et_validate"
                style="@style/BaseFontSize18"
                android:layout_width="@dimen/d0"
                android:layout_height="@dimen/d45"
                android:layout_weight="1"
                android:hint="验证码"
                android:inputType="number" />


            <Button
                android:id="@+id/btn_getsmscode"
                android:layout_width="@dimen/d70"
                android:layout_height="@dimen/d28"
                android:background="@drawable/shape_btn_getvalidatecode_normal"
                android:text="获取验证码"
                android:textSize="@dimen/txt12"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_marginTop="@dimen/d15"
        android:layout_weight="1"
        android:background="@color/colorGrayEEE">

        <Button
            android:id="@+id/btn_save"
            style="@style/BaseFontSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginTop="@dimen/d30"
            android:background="@drawable/shape_btn_register"
            android:text="保存"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>


</LinearLayout>
