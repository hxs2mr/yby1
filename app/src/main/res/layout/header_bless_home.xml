<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f5f5f5"
       >

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_search_header"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textColor="#282828"
            android:background="@drawable/location_edit_shape"
            android:hint="搜索内容"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/search"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_search_header"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d30"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_happy_search"
            android:gravity="center"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:text="搜索"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d1"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/d15"
            android:layout_marginRight="@dimen/d15"
            >
        <TextView
            android:id="@+id/tv_order_by_time_header"
            style="@style/TextBorderLess18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/d2"
            android:textColor="#ff7a00"
            android:text="发布时间"
            android:textSize="@dimen/txt15" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fa_tv1"
                android:layout_width="47dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#ff7a00"
                />
        </android.support.v7.widget.LinearLayoutCompat>


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/d15"
            android:layout_marginRight="@dimen/d15"
            >
        <TextView
            android:id="@+id/tv_order_by_view_count_header"
            style="@style/TextBorderLess18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/d2"
            android:text="浏览量"
            android:textColor="#666666"
            android:textSize="@dimen/txt15" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/liu_tv1"
                android:layout_width="47dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#ff7a00"
                android:visibility="gone"
                />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/d15"
            android:layout_marginRight="@dimen/d15"
            >
        <TextView
            android:id="@+id/tv_order_by_recevie_gift_header"
            style="@style/TextBorderLess18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/d2"
            android:text="收到礼物"
            android:textColor="#666666"
            android:textSize="@dimen/txt15" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/shou_tv1"
                android:layout_width="47dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#ff7a00"
                android:visibility="gone"
                />
        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
</LinearLayout>