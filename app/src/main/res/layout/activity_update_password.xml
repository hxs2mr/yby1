<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayEEE"
    android:orientation="vertical"
    tools:context="com.itislevel.lyl.mvp.ui.setting.SettingActivity">

    <include layout="@layout/toolbar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/d5"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d100"
            android:layout_height="@dimen/d40"
            android:gravity="center|left"
            android:text="当前密码"
            android:textColor="@color/colorNav"
            android:textSize="@dimen/txt18" />

        <EditText
            android:id="@+id/et_current_password"
            android:layout_width="@dimen/d180"
            android:layout_height="@dimen/d40"
            android:background="@null"

            android:inputType="textPassword" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/d5"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d100"
            android:layout_height="@dimen/d40"
            android:gravity="center|left"
            android:text="新密码"
            android:textColor="@color/colorNav"
            android:hint="旧密码"
            android:textSize="@dimen/txt18" />

        <EditText
            android:id="@+id/et_new_passwrod"
            android:layout_width="@dimen/d180"
            android:layout_height="@dimen/d40"
            android:background="@null"
            android:hint="请输入6-16位密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/d5"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d100"
            android:layout_height="@dimen/d40"
            android:gravity="center|left"
            android:text="确认密码"
            android:textColor="@color/colorNav"
            android:textSize="@dimen/txt18" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="@dimen/d180"
            android:layout_height="@dimen/d40"
            android:background="@null"
            android:hint="确认密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        style="@style/BaseFontSize18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d50"
        android:layout_marginRight="@dimen/d50"
        android:layout_marginTop="@dimen/d80"
        android:background="@drawable/shape_btn_login"
        android:text="保存"
        android:textColor="@color/colorWhite" />

</android.support.v7.widget.LinearLayoutCompat>
