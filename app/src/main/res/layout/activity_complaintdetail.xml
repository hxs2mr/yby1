<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout" android:visibility="gone" />
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:paddingTop="10dp"
        app:contentInsetStart="0dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/p_p_back"
                android:layout_width="50dp"
                android:paddingTop="3dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/home_qr"
                    android:layout_width="11dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/left_black"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/home_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:paddingTop="3dp"
                android:textSize="17sp"
                android:text="投诉内容"
                android:layout_gravity="center"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        >
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toushu_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            fontPath="fonts/SourceHanSansCN-Light.ttf"
            android:textSize="13sp"
            android:textColor="#666666"
            />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toushu_comment"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fontPath="fonts/SourceHanSansCN-Light.ttf"
            android:textColor="#333333"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.2"
            android:text=""
            />

        <com.lzy.ninegrid.NineGridView
            android:id="@+id/toushu_ninegrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:nestedScrollingEnabled="false"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toushu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:maxLength="20"
            fontPath="fonts/SourceHanSansCN-Light.ttf"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toushu_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:maxLength="20"
            fontPath="fonts/SourceHanSansCN-Light.ttf"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.LinearLayoutCompat>