<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/person_select"
    android:layout_height="98dp">
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/p_ton_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/p_image1"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/house_stop_image"
            />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/p_house_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#282828"
                    android:textSize="16sp"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:text="住房物业、车位缴费"
                    fontPath="fonts/SourceHanSansCN-Normal.ttf"
                    />

            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/p_house_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:maxLines="1"
                    fontPath="fonts/SourceHanSansCN-Normal.ttf"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#999999"
                    android:text=" | "
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/p_house_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:maxLines="1"
                    fontPath="fonts/SourceHanSansCN-Normal.ttf"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_house_addrss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                fontPath="fonts/MicrosoftYaHei.ttf"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="11dp"
            android:layout_height="19dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/home_two_right"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
<android.support.v7.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#f5f5f5"
    android:layout_marginLeft="15dp"
    android:layout_gravity="bottom"
    />
</android.support.v7.widget.LinearLayoutCompat>