<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d80"
        android:background="@color/colorOrder"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d20"
        android:text="交易已完成"
        android:textColor="@color/colorPrimary"

        />

    <LinearLayout
        android:id="@+id/ll_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d10"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/d10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人:"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="周末"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话:"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18"
                tools:text="13555555555" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址:"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18" />

            <TextView
                android:id="@+id/tv_addr_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/d10"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18"
                tools:text="贵州省贵阳市南明区花果园国际金融中心2栋1416大四放大放大发" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d5"
        android:layout_marginTop="@dimen/d5"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d100"
            android:background="@color/colorGrayEEE"
            android:orientation="horizontal"
            android:padding="@dimen/d5">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d100"
                android:layout_marginRight="@dimen/d10"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_img_load_pre" />

            <LinearLayout
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goodsname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:minHeight="@dimen/d60"
                    android:textColor="@color/colorNav"
                    tools:text="纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品纯棉商品" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="@dimen/d0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="￥18.8"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/txt20" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x1" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/colorGrayEEE" />

        <LinearLayout
            android:id="@+id/ll_operater"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/d10">

            <TextView
                android:id="@+id/tv_contcat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_tv_normal"
                android:paddingBottom="@dimen/d5"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:paddingTop="@dimen/d5"
                android:text="联系卖家"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:background="@drawable/shape_order_tv_normal"
                android:paddingBottom="@dimen/d5"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:paddingTop="@dimen/d5"
                android:text="申请售后"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_tv_select"
                android:paddingBottom="@dimen/d5"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:paddingTop="@dimen/d5"
                android:text="确认收款"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt18"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10">

        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号:"
            android:textColor="@color/colorNav" />

        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordernum"
            android:layout_marginTop="@dimen/d3"
            android:text="创建时间:2018-01-25 10:35:37"
            android:textColor="@color/colorNav" />
    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>
