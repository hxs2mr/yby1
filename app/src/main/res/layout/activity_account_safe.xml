<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayEEE"
    android:orientation="vertical"
    tools:context="com.itislevel.lyl.mvp.ui.setting.SettingActivity">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:background="@color/colorWhite"
        android:padding="@dimen/d3">

        <TextView
            android:id="@+id/tv_old_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/d10"
            android:textColor="#282828"
            android:textSize="16sp"
            android:text="新手机号" />


        <EditText
            android:id="@+id/et_old_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:layout_toRightOf="@id/tv_old_phone"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="新手机号"
            android:textSize="@dimen/txt14" />

    </RelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:paddingBottom="3dp"
        android:padding="@dimen/d3"
        >

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/d10"
            android:textColor="#282828"
            android:textSize="16sp"
            android:text="验证码"
            />

        <EditText
            android:id="@+id/et_validate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_height="@dimen/d35"
            android:background="@null"
            android:hint="验证码"
            android:textSize="@dimen/txt14"
            android:padding="@dimen/d2"
            />
        <Button
            android:id="@+id/btn_getsmscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textSize="13sp"
            android:padding="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_btn_getvalidatecode_normal"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"

            />
        <!--
        182 8517 5624
        -->

    </android.support.v7.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:padding="@dimen/d3">

        <TextView
            android:id="@+id/tv_new_phone"
            style="@style/TxtWrapWrap14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/d10"
            android:textColor="#282828"
            android:textSize="16sp"
            android:text="旧手机号" />

        <EditText
            android:id="@+id/et_new_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:layout_toRightOf="@id/tv_new_phone"
            android:background="@null"
            android:hint="旧手机号"
            android:textSize="@dimen/txt14" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_save"
        style="@style/BaseFontSize18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_btn_login"
        android:text="保存"
        android:textColor="@color/colorWhite" />

</android.support.v7.widget.LinearLayoutCompat>
