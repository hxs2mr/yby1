<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayEEE"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/d10">

                <ImageView
                    android:id="@+id/iv_company_img"
                    android:layout_width="@dimen/d100"
                    android:layout_height="@dimen/d100"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_img_load_pre" />

                <TextView
                    android:id="@+id/tv_company_name"
                    style="@style/TxtWrapWrap17"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d10"
                    android:padding="@dimen/d10"
                    android:text="贵州省***法律顾问"
                    android:textColor="@color/colorBtn"

                    />

                <TextView
                    style="@style/TxtWrapWrap18"
                    android:layout_marginBottom="@dimen/d10"
                    android:layout_marginTop="@dimen/d10"
                    android:text="公司简介:"
                    android:textColor="@color/colorNavAct" />

                <TextView
                    android:id="@+id/tv_company_desc"
                    style="@style/TxtWrapWrap17"
                    android:paddingBottom="@dimen/d10"
                    android:text="黔西南天天家政服务有限公司黔西南天天限公司黔西南天天家政服务有限公司黔西南天天家政服务有限公司黔西南天天家政服务有限公司黔西南天天家政服务有限公司黔西南天天家政服务有限公司黔西南天天家政服务有限公司黔西南天天家政服务有限公司黔西南天天家政服务有限公司"
                    android:textColor="@color/colorNav" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_call"
                style="@style/TxtWrapWrap17"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/d2"
                android:layout_marginRight="@dimen/d10"
                android:layout_marginTop="@dimen/d20"
                android:background="@drawable/shape_btn_login"
                android:paddingBottom="@dimen/d10"
                android:paddingLeft="@dimen/d8"
                android:paddingRight="@dimen/d8"
                android:paddingTop="@dimen/d3"
                android:text="立即咨询"
                android:textColor="@color/colorWhite"

                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
