<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/person_select"
    style="@style/BorderLess"
    android:orientation="vertical"
    >
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="80dp"
        android:layout_height="87dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:background="@drawable/qin_qin_shape"
        android:src="@mipmap/icon_img_load_pre" />

    <LinearLayout
        android:layout_width="@dimen/d0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="王**的祭祀"
            android:textColor="#ff7a00"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            android:paddingTop="10dp"
            android:textSize="17sp"
            tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tv_delete"
                style="@style/TxtWrapWrap17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:textColor="#366780"
                android:textSize="12sp"
                fontPath="fonts/NotoSansHans-DemiLight.otf"
                tools:ignore="MissingPrefix" />
        </android.support.v7.widget.LinearLayoutCompat>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linear_liu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览人数:"
                android:textColor="#000000"
                android:clickable="false"
                android:textSize="14sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                tools:ignore="MissingPrefix" />
            <TextView
                android:id="@+id/tv_look_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:clickable="false"
                android:textSize="14sp"
                android:maxLength="5"
                android:text="99999"
                android:focusable="false"
                android:focusableInTouchMode="false"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                tools:ignore="MissingPrefix"
                />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linear_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="祭祀人:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                tools:ignore="MissingPrefix"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_add_username"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                tools:ignore="MissingPrefix"
                android:focusable="false"
                android:maxLength="3"
                android:background="@drawable/shape_tv_bless_select"
                android:focusableInTouchMode="false"
                android:text="王1233"
                android:ellipsize = "end"
                />
            </android.support.v7.widget.LinearLayoutCompat>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_shou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#282828"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="14sp"
                android:clickable="false"
                tools:text="收到祭品数:" />

            <TextView
                android:id="@+id/tv_receive_gitcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:clickable="false"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                tools:ignore="MissingPrefix"
                tools:text="108" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/d5"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#282828"
                android:textSize="14sp"
                android:clickable="false"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                tools:ignore="MissingPrefix"
                tools:text="祭日:"
                />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:clickable="false"
                    fontPath="fonts/NotoSansHans-DemiLight.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="14sp"
                    tools:text="2017-12-12"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
        </LinearLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
           <android.support.v7.widget.AppCompatImageView
               android:layout_width="10dp"
               android:layout_height="12dp"
               android:background="@mipmap/location_ok"
               />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#999999"
                android:textSize="11sp"
                android:text="贵州省贵阳市"
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                />

        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#e8e8e8"
        />
</LinearLayout>