<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar_layout"
        />
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_tb"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:paddingTop="25dp"
        android:background="@drawable/login_tool_bar"
        ></android.support.v7.widget.Toolbar>

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:layout_gravity="center"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/forget_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            android:hint="手机号码"
            android:gravity="center|left"
            android:textColorHint="#666666"
            android:background="@null"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:paddingLeft="35dp"
            android:textColor="#000000"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:background="@mipmap/register_phone"
            android:layout_gravity="center|left"
            />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/forget_back"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:src="@drawable/login_back_select" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/NotoSansHans-DemiLight.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重置密码"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.ContentFrameLayout>


    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:paddingLeft="15dp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/forget_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="设置密码"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColorHint="#666666"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            android:background="@null"
            android:textSize="15sp"
            android:paddingLeft="35dp"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:background="@mipmap/register_password"
            android:layout_gravity="center|left"
            />
    </android.support.v7.widget.ContentFrameLayout>


    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/forget_password_agin"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:hint="确认密码"
            android:background="@null"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            android:gravity="center|left"
            android:textColorHint="#666666"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingLeft="35dp"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_gravity="center|left"
            android:background="@mipmap/register_password"
            />
    </android.support.v7.widget.ContentFrameLayout>


    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        >
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:background="@mipmap/register_yzm"
            android:layout_gravity="center|left"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/forget_yzm"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请输入验证码"
            android:paddingLeft="35dp"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="15sp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/forget_miao"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="#ffa200"
            android:textSize="14sp"
            android:layout_gravity="center|right"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="获取验证码"
            />
    </android.support.v7.widget.ContentFrameLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/forget_ok"
        android:layout_width="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_height="35dp"
        android:background="@drawable/login_ok"
        android:text="保存"
        android:textColor="#ffffff"
        fontPath="fonts/NotoSansHans-DemiLight.ttf"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        />
    </android.support.v7.widget.LinearLayoutCompat>
