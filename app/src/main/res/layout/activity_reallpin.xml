<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout" android:visibility="gone" />
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:paddingTop="10dp"
        app:contentInsetStart="0dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/p_p_back"
                android:layout_width="50dp"
                android:paddingTop="3dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/person_select"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/home_qr"
                    android:layout_width="11dp"
                    android:layout_height="19dp"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/left_black"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/home_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:paddingTop="3dp"
                android:textSize="17sp"
                android:text="全部评价"
                android:layout_gravity="center"
                fontPath="fonts/SourceHanSansCN-Regular.ttf"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            fontPath="fonts/SourceHanSansCN-Regular.ttf"
            android:text="总分："
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/total_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fb963a"
            fontPath="fonts/SourceHanSansCN-Regular.ttf"
            android:text="10分"
            />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myRatingBar"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:rating="1.5"
            android:stepSize="0.5"
            android:numStars="5"
            />
    </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pin_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="27dp"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:background="@drawable/reallpin_shape_yes"
            android:gravity="center"
            android:text="全部"
            />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pin_z"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="27dp"
                android:textColor="#333333"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/reallpin_shape"
                android:gravity="center"
                android:text="专业"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pin_h"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="27dp"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:background="@drawable/reallpin_shape"
                android:gravity="center"
                android:text="好评"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pin_zhon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="27dp"
                android:textColor="#333333"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/reallpin_shape"
                android:gravity="center"
                android:text="中评"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pin_zun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="27dp"
                android:textColor="#333333"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/reallpin_shape"
                android:gravity="center"
                android:text="准时"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/cha_lienar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pin_c"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="27dp"
                android:textColor="#333333"
                android:textSize="13sp"
                android:background="@drawable/reallpin_shape"
                android:gravity="center"
                android:text="差评"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:visibility="invisible"
                android:layout_marginLeft="40dp"
                android:layout_height="27dp"
                />
        </android.support.v7.widget.LinearLayoutCompat>

<android.support.v7.widget.LinearLayoutCompat
    android:id="@+id/pin_xia_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp"
    >
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/pin_xia_im"
        android:layout_width="15dp"
        android:layout_height="9dp"
        android:layout_gravity="center"
        android:background="@mipmap/repair_detail_xia"
        />
    
</android.support.v7.widget.LinearLayoutCompat>
        
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    </android.support.v7.widget.LinearLayoutCompat>