<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:textSize="17sp"
            />

        <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:maxLines="1"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:hint="请输入身份证号码"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center|left"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"
        >
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="银行卡号"
        android:textColor="#333333"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        fontPath="fonts/SourceHanSansCN-Normal.ttf"
        android:textSize="17sp"
        />

    <android.support.design.widget.TextInputEditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textColor="#999999"
        android:textSize="16sp"
        android:maxLines="1"
        fontPath="fonts/SourceHanSansCN-Normal.ttf"
        android:hint="请输入银行卡号"
        android:background="@null"
        android:layout_gravity="center"
        android:gravity="center|left"
        />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="开户姓名"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:textSize="17sp"
            />

        <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:maxLines="1"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:hint="请输入姓名"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center|left"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="银行名称"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:textSize="17sp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:maxLines="1"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center|left"
            />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"

        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/d80"
            android:layout_height="wrap_content"
            android:text="归属地"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:textSize="17sp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:text="请选择地区"
            android:layout_gravity="center"
            android:gravity="center|left"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_marginLeft="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/home_two_right"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"

        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/d80"
            android:layout_height="wrap_content"
            android:text="银行网点"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:textSize="17sp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:text="请选择银行网点"
            android:layout_gravity="center"
            android:gravity="center|left"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_marginLeft="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/home_two_right"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        fontPath="fonts/SourceHanSansCN-Light.ttf"
        android:text="银行卡验证"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:textSize="17sp"
            />

        <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:maxLines="1"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:hint="请输入银行预留手机号"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:inputType="number"
            />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/person_select"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:textSize="17sp"
            />

        <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:maxLines="1"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:hint="请输入短信验证码"
            android:background="@null"
            android:layout_gravity="center"
            android:inputType="number"
            android:gravity="center|left"
            />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:layout_marginRight="20dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_validate"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="#ff9c00"
            android:textSize="14sp"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:paddingLeft="3dp"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            android:paddingRight="3dp"
            android:text="获取验证码"
            />

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/login_ok"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:text="下一步"
        android:textColor="#fff"
        />
    </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.LinearLayoutCompat>