<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/d1"
    android:padding="@dimen/d2"
    android:background="@drawable/shape_tv_bless_tab_normal"

    >


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:textColor="#282828"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            tools:ignore="MissingPrefix"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center"
            fontPath="fonts/NotoSansHans-DemiLight.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="#999999"
            android:layout_marginRight="15dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_goodsname"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLength="6"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="蚂蚁上树X1"
            android:textColor="#000000"
            />
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/icon_img_load_pre"
        />
    </android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
</LinearLayout>