<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.itislevel.lyl.mvp.ui.user.LoginActivity">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/d32">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="姓名         ："
                />

            <EditText
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入姓名"
                android:inputType="text"
                style="@style/BaseFontSize18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="性别         ："
                 />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男"
                    style="@style/BaseFontSize18" />

                <RadioButton
                    android:id="@+id/rb_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    style="@style/BaseFontSize18" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="年龄         ："
                />

            <EditText
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入年龄"
                android:inputType="numberSigned"
                style="@style/BaseFontSize18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="身份证号："
                />

            <EditText
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入身份证号"
                style="@style/BaseFontSize18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40">

            <TextView
                style="@style/TxtWrapWrap18"
                android:text="手机号    ："
                 />

            <EditText
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入手机号"
                android:inputType="phone"
                style="@style/BaseFontSize18" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_marginTop="@dimen/d15"
        android:layout_weight="1"
        android:background="@color/colorGrayEEE">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginTop="@dimen/d30"
            android:background="@drawable/shape_btn_register"
            android:text="立即保存"
            android:textColor="@color/colorWhite"
            style="@style/BaseFontSize18" />


    </RelativeLayout>


</android.support.v7.widget.LinearLayoutCompat>
