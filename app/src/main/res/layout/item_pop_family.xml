<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="@dimen/d3"
    android:paddingRight="@dimen/d3"
    android:paddingBottom="@dimen/d3"
    android:background="@color/white"
    android:layout_marginRight="10dp"
    android:elevation="5dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_receive_sacrifice"
        android:layout_width="@dimen/d90"
        android:layout_height="wrap_content"
        android:background="@drawable/qin_qin_select_false"
        android:gravity="center"
        android:padding="5dp"
        android:text="收到的祭品"
        android:textSize="@dimen/txt16"
        fontPath="fonts/NotoSansHans-DemiLight.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="#282828"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/tv_receive_bless"
        android:layout_width="@dimen/d90"
        android:layout_height="wrap_content"
        android:background="@drawable/qin_qin_select_false"
        android:gravity="center"
        fontPath="fonts/NotoSansHans-DemiLight.ttf"
        tools:ignore="MissingPrefix"
        android:padding="5dp"
        android:text="收到的祭语"
        android:textSize="@dimen/txt16"
        android:textColor="#282828"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qin_qin_select_false"
        android:gravity="center"
        fontPath="fonts/NotoSansHans-DemiLight.ttf"
        tools:ignore="MissingPrefix"
        android:padding="5dp"
        android:text="分享"
        android:drawablePadding="5dp"
        android:textSize="@dimen/txt16"
        android:drawableLeft="@mipmap/icon_share"
        android:textColor="#282828"
        android:layout_marginTop="10dp"/>
</LinearLayout>