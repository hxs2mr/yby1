<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayEEE"
    android:orientation="vertical"
    tools:context="com.itislevel.lyl.mvp.ui.livingexpensess.LivingCallsCostActivity">


    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/d30"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d10"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d10"
            android:hint="请输入手机号" />

        <TextView
            style="@style/TxtWrapWrap18"
            android:text="充话费"
            android:textColor="@color/colorNav" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_call30"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_calls_cast"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text="30元"
                android:textColor="@color/colorBtn" />

            <TextView
                android:id="@+id/tv_call50"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:layout_weight="1"
                android:background="@drawable/shape_calls_cast"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text="50元"
                android:textColor="@color/colorBtn" />

            <TextView
                android:id="@+id/tv_call100"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_calls_cast"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text="100元"
                android:textColor="@color/colorBtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_call200"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_calls_cast"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text="200元"
                android:textColor="@color/colorBtn" />

            <TextView
                android:id="@+id/tv_call300"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:layout_weight="1"
                android:background="@drawable/shape_calls_cast"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text="300元"
                android:textColor="@color/colorBtn" />

            <TextView
                android:id="@+id/tv_call500"
                style="@style/BorderLess"
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_calls_cast"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text="500元"
                android:textColor="@color/colorBtn" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
