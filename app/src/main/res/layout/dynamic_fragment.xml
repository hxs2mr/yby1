<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_tool_bar"
        app:contentInsetStart="0dp"
        >
        <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="18dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="好友动态"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="34dp"
            android:visibility="invisible"
            android:layout_marginLeft="15dp"
        android:background="@mipmap/toncity_false"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        app:tabGravity="center"
        app:tabTextAppearance="@style/MyTabText"
        app:tabMode="fixed"
        android:layout_height="40dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dynamic_hear_image"
            android:layout_width="37dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:layout_height="37dp"
            android:background="@mipmap/person_head"
            />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8ccccccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none"
                />
            <FrameLayout
                android:id="@+id/fadon_frame"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="bottom|right"
                android:background="@mipmap/dynamic_fadon"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:text="发动态"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content" />

            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>