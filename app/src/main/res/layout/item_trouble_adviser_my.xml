<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginBottom="@dimen/d10"
    android:paddingBottom="@dimen/d20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_order"
        style="@style/TxtWrapWrap18"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:padding="@dimen/d5"
        android:textColor="@color/colorRed"
        android:text="1.2017-12-19 16:12" />

    <TextView
        style="@style/TxtWrapWrap18"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:padding="@dimen/d5"
        android:textColor="@color/colorBtn"
        android:text="我的提问:"
        />

    <TextView
        android:id="@+id/tv_problem"
        style="@style/TxtMatchWrap18"
        android:background="@color/colorSplitLine"
        android:padding="@dimen/d10"
        android:layout_margin="@dimen/d10"
        android:text=""
        android:textColor="@color/colorNav" />

    <com.lzy.ninegrid.NineGridView
        android:id="@+id/ninegrid_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10">

    </com.lzy.ninegrid.NineGridView>



    <TextView
        android:id="@+id/tv_answer_temp"
        style="@style/TxtWrapWrap18"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:padding="@dimen/d5"
        android:textColor="@color/colorPrimaryDark"
        android:text="顾问回复:"
        />

    <TextView
        android:id="@+id/tv_answer"
        style="@style/BaseFontSize18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSplitLine"
        android:padding="@dimen/d10"
        android:layout_margin="@dimen/d10"
        android:text=""
        android:textColor="@color/colorNav" />



</LinearLayout>