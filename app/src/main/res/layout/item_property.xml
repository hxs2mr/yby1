<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d10"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/d10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pay_type"
            style="@style/TxtWrapWrap18"
            android:padding="@dimen/d2"
            android:text="房屋物业费:"
            android:textColor="@color/colorNav" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TxtWrapWrap18"
            android:padding="@dimen/d2"
            android:text="￥ 150"
            android:textColor="@color/colorPrimary" />
        android:textSize="@dimen/txt15" />

        <TextView
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/d25"
            android:layout_height="@dimen/d25"
            android:layout_marginRight="@dimen/d10"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_radio_normal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d3"
        android:layout_marginTop="@dimen/d3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/TxtWrapWrap18"
            android:padding="@dimen/d2"
            android:text="到期时间:"
            android:textColor="@color/colorNav" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/d2"
            android:text="2018年1月11日"
            android:textColor="@color/colorNav"
            android:textSize="@dimen/txt18" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TxtWrapWrap18"
            android:padding="@dimen/d2"
            android:text="缴费方式:"
            android:textColor="@color/colorNav" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/d60"
            android:layout_height="@dimen/d33"
            android:layout_marginRight="@dimen/d8"
            android:background="@drawable/selector_tv_property_select"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="一个月"
            android:textColor="@color/colorNav"
            android:textSize="@dimen/txt15" />

        <TextView
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/d25"
            android:layout_height="@dimen/d25"
            android:layout_marginRight="@dimen/d10"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_circle_add" />
    </LinearLayout>
</LinearLayout>