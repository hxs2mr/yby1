            >

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/pin_framelayout"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:focusableInTouchMode="false"
                android:background="@drawable/cf_edit_shape"
                android:focusable="false"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                >

                <TextView
                    android:id="@+id/son_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="我要评论"
                    android:textSize="14sp"
                    android:paddingLeft="33dp"
                    fontPath="fonts/NotoSansHans-DemiLight.ttf"
                    tools:ignore="MissingPrefix"
                    android:background="@null"
                    android:textColor="#000000"
                    />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center|left"
                    android:background="@mipmap/cf_bi"
                    android:layout_marginLeft="10dp"
                    />

            </android.support.v7.widget.ContentFrameLayout>
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/cf_bottom_sc_linear"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/shou_image"
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/cf_sc"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/shou_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#999999"
                    android:layout_gravity="center"
                    android:maxLength="3"
                    android:text="收藏"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/cf_bottom_pin_linear"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/person_select"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/cd_pin_image"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/pin_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#ff7a00"
                    android:layout_gravity="center"
                    android:maxLength="2"
                    android:text="0"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/call_phone"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="7dp"
            fontPath="fonts/SourceHanSansCN-Normal.ttf"
            android:background="#fb963a"
            android:text="电话"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/white_phone"
            />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>