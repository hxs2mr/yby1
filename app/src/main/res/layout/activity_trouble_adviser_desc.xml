<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayEEE"
    android:orientation="vertical">
    >

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d100"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d30"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_img_load_pre" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TxtWrapWrap18"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d10"
            android:layout_marginTop="@dimen/d10"
            android:text="贵州省****法律顾问"
            android:textColor="@color/colorBtn" />


        <TextView
            style="@style/TxtWrapWrap17"
            android:layout_marginBottom="@dimen/d10"
            android:layout_marginTop="@dimen/d10"
            android:text="个人简介："
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/TxtWrapWrap17"
            android:layout_marginBottom="@dimen/d10"
            android:paddingLeft="@dimen/d30"
            android:paddingRight="@dimen/d10"
            android:text="****：,1974年，发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦发生发大水范德萨法大师傅撒旦"
            android:textColor="@color/colorNav" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_go_advise"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d35"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginTop="@dimen/d20"
        android:background="@drawable/shape_btn_login"
        android:text="立即咨询"
        android:textColor="@color/colorWhite" />
</LinearLayout>

