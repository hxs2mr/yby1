<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayEEE"
        android:orientation="vertical">


        <include layout="@layout/toolbar_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:background="@color/colorWhite"

            android:orientation="horizontal"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:paddingTop="@dimen/d10">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d100"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_img_load_pre" />

            <LinearLayout
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_village"
                    style="@style/TxtWrapWrap14"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="小区名:暂无小区名称"
                    android:textColor="@color/colorBtn" />

                <TextView
                    android:id="@+id/tv_company"
                    style="@style/TxtWrapWrap14"
                    android:text="物业公司:友邦友物业公司" />


                <TextView
                    android:id="@+id/tv_name"
                    style="@style/TxtWrapWrap14"
                    android:text="户名：" />

                <TextView

                    android:id="@+id/tv_phone"
                    style="@style/TxtWrapWrap14"
                    android:text="电话：" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TxtWrapWrap14"
                        android:text="物业费年总额：" />

                    <TextView
                        android:id="@+id/tv_house_price"
                        style="@style/TxtWrapWrap14"
                        android:text="￥0"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TxtWrapWrap14"
                        android:text="车位费年总额：" />

                    <TextView
                        android:id="@+id/tv_car_price"
                        style="@style/TxtWrapWrap14"
                        android:text="￥0"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_arrow"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/d10"
                android:padding="@dimen/d10"
                android:text="设置交费方式"
                android:textColor="@color/colorNav"
                android:textSize="@dimen/txt16" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:src="@mipmap/icon_arrow_up" />


        </LinearLayout>

        <!--android:visibility="gone"-->

        <LinearLayout
            android:id="@+id/ll_parent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            >



            <!--房屋费-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="房屋费:"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_house_one"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:layout_marginRight="@dimen/d8"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="月付"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_house_three"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:layout_marginRight="@dimen/d8"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="季付"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_house_six"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:layout_marginRight="@dimen/d8"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="半年付"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_house_twelve"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="年付"
                    android:textSize="@dimen/txt15" />

            </LinearLayout>

            <!--车位费-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/d10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="车位费:"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_car_one"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:layout_marginRight="@dimen/d8"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="月付"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_car_three"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:layout_marginRight="@dimen/d8"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="季付"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_car_six"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:layout_marginRight="@dimen/d8"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="半年付"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/tv_car_twelve"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d33"
                    android:background="@drawable/selector_tv_property_normal"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="年付"
                    android:textSize="@dimen/txt15" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d10"
                android:layout_marginBottom="@dimen/d5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注："
                    android:textColor="@color/colorRed"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前设置缴费类型下个账单日生效"

                    />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/btn_immediate"
            style="@style/BaseFontSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d30"
            android:layout_marginLeft="@dimen/d60"
            android:layout_marginRight="@dimen/d60"
            android:layout_marginTop="@dimen/d30"
            android:background="@drawable/shape_btn_login"
            android:text="立即缴费"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />


    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>
