<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到账银行卡"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            />
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/bank_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="工商银行(2098)"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="16sp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="2个工作内到账,节假日顺延"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="13sp"
                />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_gravity="center"
            android:layout_height="18dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/home_two_right"
            />
    </android.support.v7.widget.LinearLayoutCompat>

<android.support.v7.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="#e8e8e8"
    />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="#2f2f2f"
        android:text="提现现金"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:textSize="30sp"
            android:text="¥ "
            android:layout_marginLeft="30dp"
            android:layout_gravity="bottom"
            />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/all_edtext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:textSize="40sp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:inputType="number|numberDecimal"
            android:maxLines="1"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tixian_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#68c5b0"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="全部提现"
            android:layout_marginRight="24dp"
            android:layout_gravity="bottom"
            />
    </android.support.v7.widget.LinearLayoutCompat>
        
        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lin_monkey_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入金额超过零钱余额"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="#fd7070"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lin_monkey_yu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零钱余额 ¥"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="#999999"
            android:layout_marginLeft="30dp"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/all_monkey_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/login_select_yes"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="提现"
        />
</android.support.v7.widget.LinearLayoutCompat>